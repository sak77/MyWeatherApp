<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WeatherTitleTextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#0099CC</item>
        <item name="android:maxWidth">100dp</item>
    </style>

    <style name="WeatherStateTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#0EBFE9</item>
        <item name="android:maxWidth">50dp</item>
    </style>

    <style name="TemperatureTextAppearance" parent="WeatherStateTextAppearance">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="WeatherDetailsTitleTextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#0099CC</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WeatherDetailsTextLabelAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#2F4F4F</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WeatherDetailsTextValueAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#2F4F4F</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
